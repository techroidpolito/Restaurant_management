<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    >

    <RelativeLayout
        android:id="@+id/edit_dish_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bg"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/edit_profile_picture"
            android:layout_centerInParent="true"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:contentDescription="@string/dish_picture_description"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_dish_picture_button"
            android:src="@drawable/photo_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/edit_profile_picture"
            app:civ_border_width="1dp"
            />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/edit_scroll_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_dish_picture"
        >

        <RelativeLayout android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            >
            <EditText
                android:id="@+id/edit_name"
                style="@style/onelineuserEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:hint="@string/food_name"
                />

            <LinearLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/edit_name"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/price"
                    android:layout_weight="1"
                    />
                <EditText
                    android:id="@+id/edit_price"
                    style="@style/onelineuserEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/quantity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/price_layout"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text="@string/quantity"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/edit_quantity"
                    style="@style/onelineuserEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/foodtype_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/quantity_layout"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:id="@+id/foodtype_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text="@string/food_type"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/spinner_foodtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/daytime_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/foodtype_layout"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text="@string/daytime"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/edit_daytime"
                    style="@style/onelineuserEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/edit_description"
                style="@style/fivelineuserEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/daytime_layout"
                android:layout_marginBottom="16dp"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLines="10"
                android:gravity="top|start"
                android:textSize="18sp"
                android:hint="@string/description"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>